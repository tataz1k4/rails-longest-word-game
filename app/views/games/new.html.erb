<div class="letters">
  <h1>New game</h1>
  <% @letters.each do |letter| %>
  <a class="letrinhas"><%=letter%></a>
  <% end %>
</div>

<div>
  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <p>What is the longest word you can find?</p>
    <input type="text" name="word" placeholder="insert here" class="form">
    <input type="submit" vlaue="play" class="btn btn-primary">
  </form>
</div>
